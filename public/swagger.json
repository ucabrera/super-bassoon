          {
            "name": "fecha",
            "in": "query",
            "description": "Fecha en la que se desea producir",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "dias",
            "in": "query",
            "description": "Cantidad de días que llevará la producción",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "caso",
