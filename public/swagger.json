        "operationId": "manufacturingSpacesUserLogin",
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "description": "Ingresar el nombre del usuario",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "password",
            "in": "query",
            "description": "Ingresar la contraseña del usuario",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Autenticación válida del usuario.",
            "content": {
              "application/json": {
